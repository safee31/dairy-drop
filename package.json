{
  "name": "dairy-drop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "dev:inspect": "tsx watch --inspect src/server.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/server.js",
    "start:prod": "npm run build && npm run start",
    "typeorm": "tsx ./node_modules/typeorm/cli",
    "db:show": "tsx ./node_modules/typeorm/cli migration:show --dataSource src/config/orm-cli.ts",
    "db:migrate": "tsx ./node_modules/typeorm/cli migration:run --dataSource src/config/orm-cli.ts",
    "db:revert": "tsx ./node_modules/typeorm/cli migration:revert --dataSource src/config/orm-cli.ts",
    "db:generate": "tsx ./node_modules/typeorm/cli migration:generate src/migrations/migration --dataSource src/config/orm-cli.ts",
    "db:create": "tsx ./node_modules/typeorm/cli migration:create src/migrations/migration",
    "db:migrate:prod": "node ./node_modules/typeorm/cli migration:run --dataSource dist/config/type-orm-data-source.js",
    "db:revert:prod": "node ./node_modules/typeorm/cli migration:revert --dataSource dist/config/type-orm-data-source.js",
    "mg": "npm run db:migrate",
    "mg:gen": "npm run db:generate",
    "mg:down": "npm run db:revert",
    "mg:status": "npm run db:show",
    "db:reset": "npm run db:revert && npm run db:migrate",
    "db:drop": "tsx ./node_modules/typeorm/cli schema:drop --dataSource src/config/orm-cli.ts",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "logs:clear": "rimraf logs/*.log",
    "cache:clear": "rimraf node_modules/.cache",
    "seed:admin": "tsx src/seeds/admin.seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.14",
    "sharp": "^0.34.5",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.27",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.16.0",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
